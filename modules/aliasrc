# Regular alias
alias please='sudo !!'
alias fuck='please'
alias fuck='please'
alias reboot='sudo reboot'
alias poweroff='sudo poweroff'
alias shutdown='sudo shutdown now'
alias suspend='systemctl suspend'
alias clear='clear && neofetch'
alias cls='clear'
alias ende='suspend && exit'
alias sctl='sudo sytemctl'
alias blkid='sudo blkid -o export'
alias dlist='sudo blkid -o list'
alias tree='exa -aT --color=always --group-directories-first' # tree listing

# copy and moving
alias rm='rm -rf'
alias copy='ls && rsync -avh --progress'
alias cp='cp -r'
alias mv='mv'
alias scp='sudo cp -r'

# Changing "ls" to "exa"
alias ls='exa -s name --icons --time-style=long-iso --group-directories-first'      # my preferred listing
alias ll='exa -ls name --icons --time-style=long-iso --group-directories-first'     # long format
alias la='exa -as name --icons --time-style=long-iso --group-directories-first'     # all files and dirs
alias lal='exa -las name --icons --time-style=long-iso --group-directories-first'   # long format all files and dirs
alias lt='tree'   						                    # tree listing

# help and history
alias h='history'
alias help='man'

# git
alias gt-switch='git switch'
alias gt-merge='git merge'
alias gt-c='git clone'
alias gt-undocommit='git reset HEAD~'
alias gt-newbranch='git switch -c'
alias gt-delbranch='git branch -d'
alias gt-log='git log --oneline --decorate --graph --all'
alias gt-logall='git log --oneline --decorate --graph --all --full-history --simplify-by-decoration'
alias gt-legacyNewBranch='git checkout -b'
alias gt-legacySwitchBranch='git checkout'

# shell alias
alias zshrc='vim ~/.zshrc' # Quick access to the ~/.zshrc file
alias bashrc='vim ~/.bashrc' # Quick access to the ~/.bashrc file
alias fishrc='vim ~/.config/fish/config.fish' # Quick access to the ~/.fishrc file
alias aliasrc='vim ~/.alias/aliasrc' # Quick access to this file

alias nixrc='vim /etc/nixos/configuration.nix' # Quick access to the nixos configuration file
alias nixbuild='sudo nixos-rebuild switch' # Quick access to the nixos rebuild command
alias homerc='vim /etc/nixos/home.nix' # Quick access to the home-manager configuration file

# Flatpak alias
alias flatty='flatpak install flathub'
alias rflatty='flatpak remove'

neofetch
